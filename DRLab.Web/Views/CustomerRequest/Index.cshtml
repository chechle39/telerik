<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Home</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">New Request</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid">
        

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-success">
                            <div class="card-header">
                                <h3 class="card-title">New Request</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <div class="col-2">
                                            <span>Request No: RQ2020.001</span>

                                        </div>
                                        <div>
                                            <span class="mr-left">Receive Day: 12/4/2020 5:30</span>
                                            <span class="mr-left">Return Day: 12/4/2020 5:30</span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-2">
                                            <span>Công ty TNHH Hoàn Vũ</span>
                                        </div>
                                        <div>
                                            <span class="mr-left">Lê thị Quỳnh Như, nhuquynh@gmail.com</span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-1">
                                            <span>Sample List</span>
                                        </div>

                                        <div class="box pagination">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <span>Sample Name</span>
                                        <div class="col-sm-8">
                                            @(Html.Kendo().TextBox()
                                            .Name("numOfSam")
                                            .HtmlAttributes(new { placeholder = "Number Of Sample", required = "required", style = "width: 100%;height: 90%;" })
                                            )
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                      </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </div><!-- /.container-fluid -->
</section>

@Html.Partial("CreateRequest.cshtml")

<style>
    .mr-left {
        margin-left: 40px;
    }
    .custom-font-weight {
        font-weight: 500 !important;
    }
    .box {
	float: left;
	padding: 0px 0px;
}

.clearfix::after {
	clear: both;
	display: table;
}

.options {
	margin: 5px 0px 0px 0px;
	float: left;
}

.pagination {
	float: right;
}

.pagination a {
	color: black;
	float: left;
	padding: 0px 16px;
	text-decoration: none;
	transition: background-color .3s;
	border: 1px solid #ddd;
	margin: 0 4px;
}

.pagination a.active {
	background-color: #4CAF50;
	color: white;
	border: 1px solid #4CAF50;
}

.pagination a:hover:not(.active) {
	background-color: #ddd;
}
</style>
