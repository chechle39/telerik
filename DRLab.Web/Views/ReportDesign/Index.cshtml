@{
    DateTime datetemp = new DateTime();
    var report = new DevExpress.XtraReports.UI.XtraReport();
    if (@Model.ReportName == "ManagementSample")
    {
        report = new DRLab.Web.Reports.ManagementSample();
        
        report.Parameters[0].Visible = false;
        //report.Parameters[1].Value = @Model.EndDate;
        //report.Parameters[0].Value = DateTime.Parse(@Model.StartDate);
        //datetemp = DateTime.Parse(@Model.EndDate);
        //report.Parameters[1].Value = datetemp.AddHours(23).AddMinutes(59);
        report.Parameters[0].Value = @Model.RequestNumber;
    }
    if (@Model.ReportName == "ManagementRequest")    {
        report = new DRLab.Web.Reports.ManagementRequest();       
        report.Parameters[0].Visible = false;
        //report.Parameters[1].Value = @Model.EndDate;
        //report.Parameters[0].Value = DateTime.Parse(@Model.StartDate);
        //datetemp = DateTime.Parse(@Model.EndDate);
        //report.Parameters[1].Value = datetemp.AddHours(23).AddMinutes(59);
        report.Parameters[0].Value = @Model.RequestNumber;
    }

}

<h1 hidden id="flagReportName">@Model.ReportName</h1>
<h1 hidden id="flagCode">@Model.RequestNumber</h1>

<div class="report__container">
    @Html.DevExpress().WebDocumentViewer("DocumentViewer").Bind(report);
</div>
<script type="text/javascript">
    function OnCustomizeElements(s, e) {
        var rightPanel = e.GetById(DevExpress.Report.Preview.PreviewElements.RightPanel);
        var index = e.Elements.indexOf(rightPanel);
        e.Elements.splice(index, 1);
    }
</script>
<style>
    .report__container {
        position: absolute;
        height: 100%;
        width: 100%;
    }
</style>
